{
    "name": "hexlet/code",
    "description": "Diff Generator",
    "type": "project",
    "version": "1.0.0",
    "require": {
        "php": ">=8.1",
        "docopt/docopt": "^1.0"
    },
    "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "php-coveralls/php-coveralls": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "DiffGenerator\\": "src/"
        },
        "files": [
            "src/Differ.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DiffGenerator\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/gendiff"],
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src tests bin/gendiff",
        "lint-fix": "phpcbf --standard=PSR12 src tests bin/gendiff"
    }
}