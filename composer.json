{
    "name": "hexlet/code",
    "description": "Diff Generator",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "symfony/yaml": "^7.3",
        "docopt/docopt": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "squizlabs/php_codesniffer": "^3.8",
        "php-coveralls/php-coveralls": "^2.8"
    },
    "config": {
        "sort-packages": true,
        "platform-check": false,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Differ\\": "src/"
        },
        "files": [
            "src/Differ.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Differ\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/gendiff"],
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src tests bin/gendiff",
        "lint-fix": "phpcbf --standard=PSR12 src tests bin/gendiff",
        "phpstan": "phpstan analyse",
        "coverage": "phpunit --coverage-clover build/logs/clover.xml"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
